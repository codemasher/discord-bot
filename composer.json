{
	"$schema": "https://getcomposer.org/schema.json",
	"name": "codemasher/discord-bot",
	"description": "A Discord bot.",
	"license": "MIT",
	"type": "application",
	"keywords": ["discord", "bot"],
	"authors": [
		{
			"name": "smiley",
			"email": "smiley@chillerlan.net",
			"homepage": "https://github.com/codemasher"
		},
		{
			"name": "Contributors",
			"homepage":"https://github.com/codemasher/discord-bot/graphs/contributors"
		}
	],
	"funding": [
		{
			"type": "Ko-Fi",
			"url": "https://ko-fi.com/codemasher"
		}
	],
	"homepage": "https://github.com/codemasher/discord-bot",
	"support": {
		"issues": "https://github.com/codemasher/discord-bot/issues",
		"source": "https://github.com/codemasher/discord-bot"
	},
	"minimum-stability": "stable",
	"prefer-stable": true,
	"require": {
		"php": "^8.4",
		"ext-json": "*",
		"ext-mbstring": "*",
		"ext-sodium": "*",
		"ext-zlib": "*",
		"chillerlan/php-dotenv": "^3.0.1",
		"chillerlan/php-settings-container": "^3.2.1",
		"chillerlan/php-standard-utilities": "^1.0.2",
		"psr/log": "^2.0 || ^3.0",
		"team-reflex/discord-php": "^v10.36.6"
	},
	"require-dev": {
		"phan/phan": "^5.5.0",
		"phpmd/phpmd": "^2.15",
		"phpstan/phpstan": "^2.1.22",
		"phpstan/phpstan-deprecation-rules": "^2.0.3",
		"phpunit/phpunit": "^12.3",
		"slevomat/coding-standard": "^8.15",
		"squizlabs/php_codesniffer": "^3.10"
	},
	"suggest": {
		"chillerlan/php-httpinterface": "^6.0.0",
		"chillerlan/php-oauth": "^1.0.2",
		"ext-event": "https://pecl.php.net/package/event"
	},
	"autoload": {
		"psr-4": {
			"codemasher\\DiscordBot\\": "src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"codemasher\\DiscordBotTest\\": "tests"
		}
	},
	"scripts": {
		"phan": "@php vendor/bin/phan",
		"phpcs": "@php vendor/bin/phpcs -v",
		"phpstan": "@php vendor/bin/phpstan",
		"phpstan-baseline": "@php vendor/bin/phpstan --generate-baseline",
		"phpunit": "@php vendor/bin/phpunit"
	},
	"config": {
		"lock": true,
		"sort-packages": true,
		"platform-check": true,
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
